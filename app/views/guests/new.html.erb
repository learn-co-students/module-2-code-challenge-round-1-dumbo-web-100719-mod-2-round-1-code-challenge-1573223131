<h1>Create a new Guest</h1>

<% if @errors %>
    <% @errors.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<%= form_for @guest do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>

    <%= f.label "Occupation" %>
    <%= f.text_field :occupation%>

    <%= f.submit %>
<% end %>