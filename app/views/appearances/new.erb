
<% if @errors %>
<% @errors.each do |error| %>
<%= error %>
<% end %>
<% end %>



<%= form_for @appearance do |f| %>
<%= f.label :guest_id %>
<%= f.collection_select(:guest_id, Guest.all, :id, :name) %> <br>
<%= f.label "Episode" %>
<%= f.collection_select(:episode_id, Episode.all, :id, :number) %> <br>
<%= f.label :rating %> 
<%= f.number_field :rating %>
<%= f.submit %>

  
<% end %>

<%= link_to 'Episodes', episodes_path %>
<%= link_to 'Guests', guests_path %>